<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_view_play"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh45.0dimens45.0dp"
        android:background="@color/baseColorPrimary"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/wh25.0dimens25.0dp"
            android:layout_height="@dimen/wh25.0dimens25.0dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/im_sdk_back_normal"
            android:layout_marginLeft="@dimen/wh5.0dimens5.0dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="6"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressbar_webview"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:max="100" />
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/web_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>