<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:clickable="true"
    android:id="@+id/rl_song"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_albumr"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/music_detail_play"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_albumr"
        android:layout_toRightOf="@+id/iv_albumr">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="39dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="听海"
            android:textColor="@color/listTextColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="张惠妹"
                android:id="@+id/tv_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="39dp"
                android:textColor="@color/common_h2"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textSize="12sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#898989"
                />
            <TextView
                android:id="@+id/tv_local_album"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/common_h2"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="专辑"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="15dp"
        android:src="@mipmap/list_icn_more" />


</RelativeLayout>